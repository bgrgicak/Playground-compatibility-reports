{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "landingPage": "/wp-admin/options-general.php?page=login-by-referer",
  "preferredVersions": {
    "php": "8.0",
    "wp": "latest"
  },
  "login": true,
  "plugins": [
    "login-by-referer"
  ],
  "steps": [
    {
      "step": "defineWpConfigConsts",
      "consts": {
        "WP_AUTO_UPDATE_CORE": false,
        "DISABLE_WP_CRON": true
      }
    },
    {
      "step": "installPlugin",
      "pluginZipFile": {
        "resource": "wordpress.org/plugins",
        "slug": "login-by-referer"
      },
      "options": {
        "activate": true
      }
    }
  ]
}
