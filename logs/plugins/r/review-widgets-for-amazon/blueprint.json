{
  "landingPage": "/wp-admin/admin.php?page=review-widgets-for-amazon%2Fsettings.php",
  "features": {
    "networking": true
  },
  "steps": [
    {
      "step": "defineWpConfigConsts",
      "consts": {
        "WP_AUTO_UPDATE_CORE": false,
        "DISABLE_WP_CRON": true
      }
    },
    {
      "step": "login"
    },
    {
      "step": "setSiteOptions",
      "options": {
        "trustindex-amazon-preview": "1"
      }
    },
    {
      "step": "installPlugin",
      "pluginZipFile": {
        "resource": "wordpress.org/plugins",
        "slug": "review-widgets-for-amazon"
      },
      "options": {
        "activate": true
      }
    }
  ]
}
