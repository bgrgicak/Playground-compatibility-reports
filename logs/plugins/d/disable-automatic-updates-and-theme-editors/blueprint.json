{
  "preferredVersions": {
    "php": "7.2",
    "wp": "latest"
  },
  "steps": [
    {
      "step": "defineWpConfigConsts",
      "consts": {
        "WP_AUTO_UPDATE_CORE": false,
        "DISABLE_WP_CRON": true
      }
    },
    {
      "step": "installPlugin",
      "pluginData": {
        "resource": "wordpress.org/plugins",
        "slug": "disable-automatic-updates-and-theme-editors"
      },
      "options": {
        "activate": true
      }
    }
  ]
}
