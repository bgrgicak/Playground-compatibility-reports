{
  "landingPage": "/wp-admin/admin.php?page=dev-debug-tools&tab=settings",
  "preferredVersions": {
    "php": "8.0",
    "wp": "latest"
  },
  "phpExtensionBundles": [
    "kitchen-sink"
  ],
  "steps": [
    {
      "step": "defineWpConfigConsts",
      "consts": {
        "WP_AUTO_UPDATE_CORE": false,
        "DISABLE_WP_CRON": true
      }
    },
    {
      "step": "login",
      "username": "admin",
      "password": "password"
    },
    {
      "step": "setSiteOptions",
      "options": {
        "ddtt_dev_timezone": "America/Chicago",
        "ddtt_ql_user_id": 1,
        "ddtt_ql_post_id": 1,
        "ddtt_online_users": 1,
        "ddtt_admin_bar_wp_logo": 1,
        "ddtt_admin_bar_condense": "Everyone"
      }
    },
    {
      "step": "installPlugin",
      "pluginZipFile": {
        "resource": "wordpress.org/plugins",
        "slug": "dev-debug-tools"
      },
      "options": {
        "activate": true
      }
    }
  ]
}
