{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "login": true,
  "siteOptions": {
    "blogname": "WP LegalPages"
  },
  "landingPage": "/wp-admin/admin.php?page=wplp-dashboard",
  "preferredVersions": {
    "php": "7.4",
    "wp": "latest"
  },
  "steps": [
    {
      "step": "defineWpConfigConsts",
      "consts": {
        "WP_AUTO_UPDATE_CORE": false,
        "DISABLE_WP_CRON": true
      }
    },
    {
      "step": "installPlugin",
      "pluginData": {
        "resource": "wordpress.org/plugins",
        "slug": "wplegalpages"
      }
    },
    {
      "step": "installPlugin",
      "pluginZipFile": {
        "resource": "wordpress.org/plugins",
        "slug": "wplegalpages"
      },
      "options": {
        "activate": true
      }
    }
  ]
}
