{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "landingPage": "/product/giorgio-armani-neo-nude-glow-foundation/",
  "login": true,
  "preferredVersions": {
    "php": "8.0",
    "wp": "latest"
  },
  "siteOptions": {
    "blogname": "WP INCI",
    "blogdescription": "A WordPress plugin to manage INCI (International Nomenclature of Cosmetic Ingredients)."
  },
  "plugins": [
    "wp-inci"
  ],
  "steps": [
    {
      "step": "defineWpConfigConsts",
      "consts": {
        "WP_AUTO_UPDATE_CORE": false,
        "DISABLE_WP_CRON": true
      }
    },
    {
      "step": "importWxr",
      "file": {
        "resource": "url",
        "url": "https://raw.githubusercontent.com/xlthlx/wp-inci/main/data/wpinci-products-sample.xml"
      }
    },
    {
      "step": "installPlugin",
      "pluginZipFile": {
        "resource": "wordpress.org/plugins",
        "slug": "wp-inci"
      },
      "options": {
        "activate": true
      }
    }
  ]
}
