{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "landingPage": "/wp-admin/admin.php?page=wpnakama",
  "preferredVersions": {
    "php": "8.2",
    "wp": "6.6"
  },
  "features": {
    "networking": true
  },
  "meta": {
    "title": "WPNakama Plugin Blueprint",
    "description": "WPNakama is a team and client collaboration WordPress plugin.",
    "author": "kantbtrue, qdonow, designthingy, savydv",
    "categories": [
      "kanban",
      "project management",
      "task management",
      "client",
      "team",
      "collaboration"
    ]
  },
  "steps": [
    {
      "step": "defineWpConfigConsts",
      "consts": {
        "WP_AUTO_UPDATE_CORE": false,
        "DISABLE_WP_CRON": true
      }
    },
    {
      "step": "login"
    },
    {
      "step": "installPlugin",
      "pluginData": {
        "resource": "wordpress.org/plugins",
        "slug": "wpnakama"
      },
      "options": {
        "activate": true
      }
    },
    {
      "step": "runPHP",
      "code": "<?php require_once 'wordpress/wp-load.php'; wp_update_post( [ 'ID' => 1, 'post_status' => 'publish' ] ); ?>"
    },
    {
      "step": "setSiteOptions",
      "options": {
        "blogname": "WPNakama Demo",
        "wpnakama_subscriber": {
          "status": "subscribed"
        }
      }
    },
    {
      "step": "installPlugin",
      "pluginZipFile": {
        "resource": "wordpress.org/plugins",
        "slug": "wpnakama"
      },
      "options": {
        "activate": true
      }
    }
  ]
}
