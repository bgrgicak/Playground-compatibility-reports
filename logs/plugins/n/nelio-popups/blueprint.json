{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "landingPage": "/",
  "preferredVersions": {
    "php": "8.0",
    "wp": "latest"
  },
  "steps": [
    {
      "step": "defineWpConfigConsts",
      "consts": {
        "WP_AUTO_UPDATE_CORE": false,
        "DISABLE_WP_CRON": true
      }
    },
    {
      "step": "login",
      "username": "admin",
      "password": "password"
    },
    {
      "step": "installPlugin",
      "pluginZipFile": {
        "resource": "wordpress.org/plugins",
        "slug": "nelio-popups"
      },
      "options": {
        "activate": true
      }
    },
    {
      "step": "importWxr",
      "file": {
        "resource": "url",
        "url": "https://nelio-popups.s3.eu-west-1.amazonaws.com/popups.wxr"
      }
    },
    {
      "step": "importWxr",
      "file": {
        "resource": "url",
        "url": "https://nelio-popups.s3.eu-west-1.amazonaws.com/pages.wxr"
      }
    },
    {
      "step": "setSiteOptions",
      "options": {
        "show_on_front": "page",
        "page_on_front": 6
      }
    }
  ]
}
