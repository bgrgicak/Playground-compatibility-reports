{
  "landingPage": "/wp-admin/",
  "login": true,
  "plugins": [
    "hyakunin-isshu-admin-bar"
  ],
  "steps": [
    {
      "step": "defineWpConfigConsts",
      "consts": {
        "WP_AUTO_UPDATE_CORE": false,
        "DISABLE_WP_CRON": true
      }
    },
    {
      "step": "setSiteLanguage",
      "language": "ja"
    },
    {
      "step": "installPlugin",
      "pluginZipFile": {
        "resource": "wordpress.org/plugins",
        "slug": "hyakunin-isshu-admin-bar"
      },
      "options": {
        "activate": true
      }
    }
  ]
}
