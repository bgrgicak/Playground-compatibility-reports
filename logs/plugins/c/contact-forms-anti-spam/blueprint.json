{
  "landingPage": "/wp-admin/admin.php?page=maspik",
  "preferredVersions": {
    "php": "7.4",
    "wp": "6.4"
  },
  "phpExtensionBundles": [
    "kitchen-sink"
  ],
  "steps": [
    {
      "step": "defineWpConfigConsts",
      "consts": {
        "WP_AUTO_UPDATE_CORE": false,
        "DISABLE_WP_CRON": true
      }
    },
    {
      "step": "login",
      "username": "admin",
      "password": "password"
    },
    {
      "step": "setSiteOptions",
      "options": {
        "blogname": "Maspik Test Site",
        "blogdescription": "Testing Environment"
      }
    },
    {
      "step": "installPlugin",
      "pluginZipFile": {
        "resource": "wordpress.org/plugins",
        "slug": "contact-forms-anti-spam"
      },
      "options": {
        "activate": true
      }
    }
  ]
}
