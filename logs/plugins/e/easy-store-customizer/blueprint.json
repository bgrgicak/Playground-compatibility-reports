{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "meta": {
    "title": "ESC Demo Store",
    "description": "A Woo store with custom theme, content, and products.",
    "author": "iambherulal",
    "categories": [
      "Woocommerce",
      "Site"
    ]
  },
  "landingPage": "/wp-admin",
  "plugins": [
    "woocommerce",
    "easy-store-customizer"
  ],
  "steps": [
    {
      "step": "defineWpConfigConsts",
      "consts": {
        "WP_AUTO_UPDATE_CORE": false,
        "DISABLE_WP_CRON": true
      }
    },
    {
      "step": "setSiteOptions",
      "options": {
        "blogname": "ESC Demo Store",
        "woocommerce_onboarding_profile": {
          "skipped": true
        }
      }
    },
    {
      "step": "importWxr",
      "file": {
        "resource": "url",
        "url": "https://raw.githubusercontent.com/wordpress/blueprints/trunk/blueprints/stylish-press/woo-products.wxr"
      }
    },
    {
      "step": "login"
    },
    {
      "step": "installPlugin",
      "pluginZipFile": {
        "resource": "wordpress.org/plugins",
        "slug": "easy-store-customizer"
      },
      "options": {
        "activate": true
      }
    }
  ]
}
