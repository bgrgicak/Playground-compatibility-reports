{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "features": {
    "networking": true
  },
  "steps": [
    {
      "step": "defineWpConfigConsts",
      "consts": {
        "WP_AUTO_UPDATE_CORE": false,
        "DISABLE_WP_CRON": true
      }
    },
    {
      "step": "login"
    },
    {
      "step": "wp-cli",
      "command": "wp post delete 1 2 3 --force"
    },
    {
      "step": "installPlugin",
      "pluginZipFile": {
        "resource": "wordpress.org/plugins",
        "slug": "embedded-posts"
      },
      "options": {
        "activate": true
      }
    },
    {
      "step": "importFile",
      "file": {
        "resource": "url",
        "url": "https://raw.githubusercontent.com/Plebster/blueprint/main/test-data-1-2-3-odds-evens-odds-and-evens.xml"
      }
    }
  ],
  "landingPage": "/wp-admin/post.php?post=45&action=edit"
}
