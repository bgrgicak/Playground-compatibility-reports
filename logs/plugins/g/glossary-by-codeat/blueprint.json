{
  "landingPage": "/?glossary=star-wars",
  "phpExtensionBundles": [
    "kitchen-sink"
  ],
  "constants": {
    "GLOSSARY_PLAYGROUND_PREVIEW": "true"
  },
  "steps": [
    {
      "step": "defineWpConfigConsts",
      "consts": {
        "WP_AUTO_UPDATE_CORE": false,
        "DISABLE_WP_CRON": true
      }
    },
    {
      "step": "login"
    },
    {
      "step": "installPlugin",
      "pluginZipFile": {
        "resource": "wordpress.org/plugins",
        "slug": "glossary-by-codeat"
      },
      "options": {
        "activate": true
      }
    },
    {
      "step": "importWxr",
      "file": {
        "resource": "url",
        "url": "https://docs.codeat.co/glossary/playground-import.xml"
      }
    },
    {
      "step": "runPHP",
      "code": "<?php require 'wordpress/wp-load.php'; $settings = json_decode( '[{\"posttypes\": [\"glossary\"],\"is\": [\"home\",\"category\",\"tag\",\"arc_glossary\",\"tax_glossary\"],\"slug\": \"glossary\",\"slug_cat\": \"glossary-cat\",\"tooltip\": \"link-tooltip\",\"tooltip_style\": \"classic\",\"excerpt_limit\": \"60\"}]' );update_option( GT_SETTINGS . '-settings', get_object_vars( $settings[ 0 ] ) );"
    }
  ]
}
