{
  "plugins": [
    "woocommerce",
    "gtm-ecommerce-woo",
    "wordpress-importer"
  ],
  "steps": [
    {
      "step": "defineWpConfigConsts",
      "consts": {
        "WP_AUTO_UPDATE_CORE": false,
        "DISABLE_WP_CRON": true
      }
    },
    {
      "step": "runPHP",
      "code": "<?php include 'wordpress/wp-load.php'; delete_transient( '_wc_activation_redirect' );"
    },
    {
      "step": "wp-cli",
      "command": "wp wc tool run install_pages --user=admin"
    },
    {
      "step": "wp-cli",
      "command": "wp wc product create --name=\"Demo Product 1\" --regular_price=49.99 --user=admin"
    },
    {
      "step": "wp-cli",
      "command": "wp wc product create --name=\"Demo Product 2\" --regular_price=49.99 --user=admin"
    },
    {
      "step": "wp-cli",
      "command": "wp wc product create --name=\"Demo Product 3\" --regular_price=99.99 --user=admin"
    },
    {
      "step": "setSiteOptions",
      "options": {
        "permalink_structure": "/%postname%/",
        "woocommerce_default_country": "US:CA",
        "woocommerce_currency": "USD",
        "woocommerce_currency_pos": "left",
        "gtm_ecommerce_woo_event_inspector_enabled": "yes-demo"
      }
    },
    {
      "step": "installPlugin",
      "pluginZipFile": {
        "resource": "wordpress.org/plugins",
        "slug": "gtm-ecommerce-woo"
      },
      "options": {
        "activate": true
      }
    }
  ],
  "preferredVersions": {
    "php": "8.0",
    "wp": "6.6"
  },
  "features": {
    "networking": true
  },
  "login": true,
  "landingPage": "/wp-admin/options-general.php?page=gtm-ecommerce-woo"
}
