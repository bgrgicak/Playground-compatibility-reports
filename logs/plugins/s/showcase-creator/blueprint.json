{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "login": true,
  "features": {
    "networking": true
  },
  "siteOptions": {
    "blogname": "Showcase Creator Playground",
    "show_on_front": "page",
    "page_on_front": "760"
  },
  "plugins": [
    "showcase-creator"
  ],
  "steps": [
    {
      "step": "defineWpConfigConsts",
      "consts": {
        "WP_AUTO_UPDATE_CORE": false,
        "DISABLE_WP_CRON": true
      }
    },
    {
      "step": "runPHP",
      "code": "<?php\nrequire '/wordpress/wp-load.php';\n$posts = get_posts(array('numberposts' => -1, 'post_type' => array('post','page'), 'post_status' => 'any'));\nforeach ($posts as $post) { wp_delete_post($post->ID, true); }"
    },
    {
      "step": "activatePlugin",
      "pluginPath": "showcase-creator/showcase-creator.php"
    },
    {
      "step": "importWxr",
      "file": {
        "resource": "url",
        "url": "https://videlinify.com/wp-content/uploads/scplayground/content.xml"
      }
    },
    {
      "step": "installPlugin",
      "pluginZipFile": {
        "resource": "wordpress.org/plugins",
        "slug": "showcase-creator"
      },
      "options": {
        "activate": true
      }
    }
  ]
}
