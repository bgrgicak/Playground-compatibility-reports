{
  "landingPage": "/wp-admin/admin.php?page=free-facebook-reviews-and-recommendations-widgets%2Fsettings.php",
  "features": {
    "networking": true
  },
  "steps": [
    {
      "step": "defineWpConfigConsts",
      "consts": {
        "WP_AUTO_UPDATE_CORE": false,
        "DISABLE_WP_CRON": true
      }
    },
    {
      "step": "login"
    },
    {
      "step": "setSiteOptions",
      "options": {
        "trustindex-facebook-preview": "1"
      }
    },
    {
      "step": "installPlugin",
      "pluginZipFile": {
        "resource": "wordpress.org/plugins",
        "slug": "free-facebook-reviews-and-recommendations-widgets"
      },
      "options": {
        "activate": true
      }
    }
  ]
}
